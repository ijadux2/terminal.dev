{
  "name": "nixi-terminal",
  "version": "1.0.0",
  "description": "Advanced terminal emulator with Nixi scripting support",
  "main": "src/index.js",
  "bin": {
    "nixi-terminal": "./src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "build": "npm run build:nixi && npm run build:terminal",
    "build:nixi": "cd ../nixi && npm run build",
    "build:terminal": "webpack --mode production",
    "test": "jest",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "terminal",
    "emulator",
    "nixi",
    "scripting",
    "gpu",
    "opengl"
  ],
  "author": "Nixi Terminal Team",
  "license": "MIT",
  "dependencies": {
    "gl": "^6.0.2",
    "glfw": "0.0.0",
    "x11": "^2.3.0",
    "node-pty": "^1.0.0",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "jest": "^29.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
